{
  "workspace": [
    "./packages/http",
    "./packages/helpers",
    "./example/deno",
    "./apps/docs"
  ],
  "nodeModulesDir": "auto",
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "tasks": {
    "test": "deno test --allow-net packages/http/tests",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "bench": "cd benchmarks && ./run.sh",
    "example": "deno task --cwd example/deno dev",
    "example:bun": "cd example/bun && bun run dev"
  },
  "allowScripts": [
    "npm:esbuild@0.25.12",
    "npm:fsevents@2.3.3",
    "npm:sharp@0.34.5"
  ]
}
